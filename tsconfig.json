{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "node",
      "jest"
    ],
    "rootDir": ".",
    "paths": {
      "@color-utils/*": ["packages/*/src"]
    }
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*"
  ],
  "include": [
    "packages",
    "scripts",
    "typings"
  ]
}
